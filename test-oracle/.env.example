# RPC URL for Monad testnet
RPC_URL=https://testnet-rpc.monad.xyz

# Private key of the authorized updater (must match AUTHORIZED_UPDATER in the module)
PRIVATE_KEY=0x...

# DeFiInteractor contract address (deployed via DeployAll.s.sol)
MODULE_ADDRESS=0x...

# Envio GraphQL endpoint (local dev or hosted)
ENVIO_GRAPHQL_URL=http://localhost:8080/v1/graphql

# Cron schedules
SAFE_VALUE_CRON="*/30 * * * * *"
SPENDING_ORACLE_CRON="*/5 * * * *"

# Event polling interval in milliseconds (5s â€” Envio handles indexing)
POLL_INTERVAL_MS=5000

# Blocks to look back for historical events (~24h on Monad at 1s blocks)
BLOCKS_TO_LOOK_BACK=86400

# Window duration in seconds (default 24 hours)
WINDOW_DURATION_SECONDS=86400

# Confirmation blocks (~1 min on Monad at 1s blocks)
CONFIRMATION_BLOCKS=60

# Max blocks per RPC query (Monad limits getLogs to 100-1000 blocks)
MAX_BLOCKS_PER_QUERY=1000

# Gas limit for transactions
GAS_LIMIT=500000

